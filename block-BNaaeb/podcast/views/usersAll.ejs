<html>
  <head>
    <title >All USERS</title>
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css"
    rel="stylesheet">   </head>
<body class="bg-yellow-500">

    <button class=" bg-red-500 hover:bg-red-700 text-white font-bold py-2 p-12 m-4 absolute left-2 top-4"> <a href="/">HOME</a></button>

    <h1 class="font-serif text-4xl text-center p-16">You Are Viewing All USERS</h1>


    <div class="p-2 m-4 flex justify-center flex-wrap">
       <% users.forEach(user => { %>
        <div class="p-4 m-4 w-4/12 divide-solid border-2 border-grey-400 flex flex-col justify-start">
            <h3><span class="m-6 font-bold text-red-800">NAME: </span> <span class="underline font-bold"><%= user.fname %></h3>
              <p><span class="m-6 font-bold text-red-800">EMAIL: </span> <%= user.email %></p>
            <p><span class="m-6 font-bold text-red-800">TYPE: </span> <%= user.userType %></p>
            <form class="p-6 divide-solid border-2 border-grey-400 m-12 flex flex-col w-96" action="/users/<%= user._id%>/edit/type" method="POST">
                <select name="userType">
                        <option value="">Type</option>
                        <option selected value="free">FREE</option>
                        <option value="vip">VIP</option>
                        <option value="premium">PREMIUM</option>
                </select>
                <button class=" bg-red-500 hover:bg-red-700 text-white font-bold py-2 p-12 m-4">Change User Type</button>
            </form>
            <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 m-6 rounded-l"><a href="/user/<%= user._id %>">VIEW</a></button>
        </div>
       <% }) %>
    </div>
  </body>
</html>