<!DOCTYPE html>
<html>
  <head>
    <title>LOGGED IN SUCCESSFULLY </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
   
      <% if(name){ %>
        <h1>Welcome to your Article Page: <span class="dynamic">
          <%= name%>
        <button class="btn"><a href="/users/logout">LOGOUT</a></button>
        <button class="btn"><a href="/articles/add">ADD NEW</a></button>
        </span></h1>
      <% } else { %>
        <h1>Welcome to All Articles Page</h1>
        <button class="btn"><a href="/users/login">LOGIN</a></button>

      <% } %>
      <% if(articles){ %>
   <% articles.forEach(article => { %>
    <div class="padding">
      <h2><%= article.title %></h2>
      <p><%= article.description %></p> 
      <div>
       <button><a href="/articles/<%= article.slug%>">VIEW</a></button>
    </div>
    <%})%>
    <% } else { %>
      <h3>You have No Articles</h3>
      <% } %>
  </body>
</html>